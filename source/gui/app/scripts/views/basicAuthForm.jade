div.spacewalk-toolbar-h1
  h1
    i.fa.fa-group
    | Insights Configuration
div.panel.panel-default
  div.panel-heading
    h4 Red Hat Insights Configuration
  div.panel-body
    form.form-horizontal
      div.form-group
        label(for='rha-insights-password').col-lg-3.control-label Customer Portal Username
        div.col-lg-6
          input#rha-insights-password.form-control(type='text', size='32', ng-model='username')
      div.form-group
        label(for='rha-insights-password').col-lg-3.control-label Customer Portal Password
        div.col-lg-6
          input#rha-insights-password.form-control(type='password', size='32', ng-model='password')
      div.form-group
        div.col-lg-offset-3.col-lg-6
          input.btn.btn-success(value='Update', ng-click='doUpdate()', ng-disabled='disableUpdateButton()')
          i.fa.fa-spinner.fa-spin.fa-1-5x(ng-show='loading')
